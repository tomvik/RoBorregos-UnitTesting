{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "catkin_make",
            "type": "shell",
            "command": "catkin_make",
            "args": [
                "-j8",
                "-l8",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=1",
                "-DCMAKE_CXX_STANDARD=14"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "catkin_test",
            "type": "shell",
            "command": "catkin_make run_tests",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }

        }
    ]
}